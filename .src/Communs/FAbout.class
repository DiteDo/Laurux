' Gambas class file

Public version_sha1 As String = "SHA1_REPO_GIT_Laurux"
Public version_branch As String = "BRANCH_REPO_GIT_Laurux"


Public Sub _New()

  Dim hImage As Image
  Dim Y As Integer
  Dim E As Float

  Me.center
  Version.Text = "Laurux v" & Application.Version
  Versionsha1.Text = Left$(version_sha1, 7) & " (branche: " & version_branch & ")"
  hImage = New Image(Grad1.W, Grad1.H)
  For Y = 0 To hImage.H - 1
    E = (Y / hImage.H)
    hImage.FillRect(0, Y, hImage.W, 1, Color.RGB(255, 255, 255, E * 255))
  Next
  Grad1.Picture = hImage.Picture

  For Y = 0 To hImage.H - 1
    E = 1 - (Y / hImage.H)
    hImage.FillRect(0, Y, hImage.W, 1, Color.RGB(255, 255, 255, E * 255))
  Next
  Grad2.Picture = hImage.Picture

End


Public Sub Button1_Click()

  Me.Close()

End

Public Sub Temps_Timer()

  Dim Y As Integer

  Y = Lic.ScrollY
  Inc Lic.ScrollY
  If Y = Lic.ScrollY Then Lic.ScrollY = 0

End

Public Sub Button2_Click()

  Temps.Delay = 30

  If Lic.Visible = False Then
    Lic.Visible = True
    Grad1.visible = True
    Grad2.visible = True
  Else
    Lic.Visible = False
    Grad1.visible = False
    Grad2.visible = False
  Endif

End

