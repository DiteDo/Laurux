Private $men As Menu


Public Sub _new(constante As Menu, table As Menu, stock As Menu, regbl As Menu, choix As String)

 
  If Settings["/Soc" & Start.Societe & "/bois"] Then
    If choix = "T" Then
      $men = New Menu(constante) As "Tconsigne"
      $men.Text = "Cons&ignes"
      $men = New Menu(constante) As "Tregie"
      $men.Text = "&Régie"
      $men = New Menu(stock) As "decfour"
      $men.Text = "Saisie des déconsignes fournisseurs"
      regbl.Visible = False
    Endif
  Endif
  If Settings["/Soc" & Start.Societe & "/pp"] Then
    If choix = "T" Then
      $men = New Menu(constante) As "tipp"
      $men.Text = "Tipp régional&e"
      $men = New Menu(table) As "Tfioul"
      $men.Text = "Tarif &fioul"
      regbl.Visible = False
    Endif
  Endif
End

