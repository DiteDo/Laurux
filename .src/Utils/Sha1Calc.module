      $cle = Replace$($cle, ")", "")
      $cle = Replace$($cle, "(", "")
      $cle = Replace$($cle, "'", "")
      Shell "echo " & $cle & " | sha1sum 2>&1" To $cle2
      Utils.db.Exec("update  " & $Tab & " set  control = &2 where lInd = &1", sResult!lInd, Left$($cle2, 40))
    Until sResult.MoveNext()
